region                = "ap-northeast-2"
environment           = "prod"
project_name          = "ec2-app"
vpc_cidr              = "10.40.0.0/16"
public_subnet_count   = 2
public_subnet_newbits = 4
instance_type         = "t3.small"
# ami_id             = "ami-xxxxxxxx"
ssh_key_name          = null
# ssh_public_key     = "ssh-ed25519 AAAA..."
root_volume_size      = 30
associate_public_ip   = true
ingress_cidrs         = ["203.0.113.0/24"]
user_data             = <<-EOT
#! /bin/bash
yum update -y
yum install -y httpd
systemctl enable httpd
systemctl start httpd
echo "Hello from prod" > /var/www/html/index.html
EOT
